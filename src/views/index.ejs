<div class="container-xxl" id="signup-page">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <div class="col-12">
                    <div class="row">
                        <div class="col-4">
                            <img src="/img/money.png" alt="" height="200" width="200" />
                        </div>

                        <div class="col-8 py-4">
                            <div class="fw-bold heading_1">Expense</div>
                            <div class="heading_2">Tracker</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="col-12">
                    <div class="row justify-content-center">
                        <div class="col-8 border rounded p-4 bg-white">
                            <h1>Create an account</h1>
							<% if (error_msg) { %>
								<div class="alert alert-danger" role="alert">
									<span class="font-medium">Error!</span>
									<%= error_msg %>
								</div>
							<% } %>
                            <form class="" action="/signup" method="post">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Your Name</label>
                                    <input type="name" name="name" id="name" class="form-control" placeholder="Your Name" required="" value="<%- name ? name : '' %>" />
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Your Email</label>
                                    <input type="email" name="email" id="email" class="form-control" placeholder="name@company.com" required="" value="<%- email ? email : '' %>" />
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" name="password" id="password" placeholder="••••••••" class="form-control" required="" value="" />
                                </div>
                                <div class="mb-3">
                                    <label for="confirm_password" class="form-label">Confirm password</label>
                                    <input type="confirm_password" name="confirm_password" id="confirm_password" placeholder="••••••••" class="form-control" required="" value="" />
                                </div>
                                
                            </form>
							<div class="mb-3">
								<button type="submit" class="w-100 btn btn-primary">
									Sign Up
								</button>
								<p class="text-sm font-light text-gray-500 dark:text-gray-400">
									Already have an account?
									<a href="/login" class="font-medium text-primary-600 hover:underline dark:text-primary-500">Login here</a>
								</p>
							</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>